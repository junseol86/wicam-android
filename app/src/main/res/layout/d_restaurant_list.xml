<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/restaurant_top_bar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        >
        <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:scrollbars="none"
            >
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="50dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:background="@color/wc_orange"
                    >
                    <ImageButton
                        android:id="@+id/restaurant_list_see_favorite_button"
                        android:background="@drawable/restaurant_list_see_favorite_off"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="0"
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:background="@color/wc_orange"
                    >
                    <EditText
                        android:id="@+id/restaurant_list_edit_text"
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:background="@drawable/rounded_edit_text"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:textSize="14sp"
                        android:textColor="@color/text_normal"
                        android:singleLine="true"
                        />
                    <TextView
                        android:id="@+id/restaurant_list_edit_text_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="식당명 · 지역 · 키워드"
                        android:textSize="12sp"
                        android:textColor="@color/text_very_light"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="18dp"
                        />
                </RelativeLayout>
                <Button
                    android:id="@+id/restaurant_genre_all"
                    style="@style/item_topbar_button"
                    android:layout_marginLeft="10dp"
                    android:layout_width="45dp"
                    android:text="전체"
                    android:tag=""
                    android:textColor="@color/wc_orange"
                    />
                <Button
                    android:id="@+id/restaurant_genre_korean"
                    style="@style/item_topbar_button"
                    android:layout_width="45dp"
                    android:text="한식"
                    android:tag="한식"
                    android:textColor="@color/text_very_light"
                    />
                <Button
                    android:id="@+id/restaurant_genre_snack"
                    style="@style/item_topbar_button"
                    android:layout_width="45dp"
                    android:text="분식"
                    android:tag="분식"
                    android:textColor="@color/text_very_light"
                    />
                <Button
                    android:id="@+id/restaurant_genre_chinese"
                    style="@style/item_topbar_button"
                    android:layout_width="45dp"
                    android:text="중식"
                    android:tag="중식"
                    android:textColor="@color/text_very_light"
                    />
                <Button
                    android:id="@+id/restaurant_genre_japanese"
                    style="@style/item_topbar_button"
                    android:layout_width="45dp"
                    android:text="일식"
                    android:tag="일식"
                    android:textColor="@color/text_very_light"
                    />
                <Button
                    android:id="@+id/restaurant_genre_western"
                    style="@style/item_topbar_button"
                    android:layout_width="45dp"
                    android:text="양식"
                    android:tag="양식"
                    android:textColor="@color/text_very_light"
                    />
                <Button
                    android:id="@+id/restaurant_genre_world"
                    style="@style/item_topbar_button"
                    android:layout_width="45dp"
                    android:text="세계"
                    android:tag="세계"
                    android:textColor="@color/text_very_light"
                    />
                <Button
                    android:id="@+id/restaurant_genre_meat"
                    style="@style/item_topbar_button"
                    android:layout_width="45dp"
                    android:text="고기"
                    android:tag="고기"
                    android:textColor="@color/text_very_light"
                    />
                <Button
                    android:id="@+id/restaurant_genre_chicken"
                    style="@style/item_topbar_button"
                    android:layout_width="45dp"
                    android:text="치킨"
                    android:tag="치킨"
                    android:textColor="@color/text_very_light"
                    />
                <Button
                    android:id="@+id/restaurant_genre_cafe"
                    style="@style/item_topbar_button"
                    android:layout_width="45dp"
                    android:text="카페"
                    android:tag="카페"
                    android:textColor="@color/text_very_light"
                    />
                <Button
                    android:id="@+id/restaurant_genre_bar"
                    style="@style/item_topbar_button"
                    android:layout_width="45dp"
                    android:text="주점"
                    android:tag="주점"
                    android:textColor="@color/text_very_light"
                    />
            </LinearLayout>
        </HorizontalScrollView>
        <ImageView
            android:layout_width="12dp"
            android:layout_height="50dp"
            android:layout_weight="0"
            android:src="@drawable/restaurant_more_to_right"
            />
    </LinearLayout>


    <Button
        android:id="@+id/restaurant_see_all_again_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0"
        android:text="모든 식당 보기"
        android:textSize="16sp"
        android:textColor="@color/text_normal"
        android:background="@color/transparent"
        android:visibility="gone"
        />

    <RelativeLayout
        android:background="@color/wc_orange"
        android:layout_weight="0"
        android:layout_width="match_parent"
        android:layout_height="1dp">
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/restaurant_list_recycler_view"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <LinearLayout
            android:id="@+id/restarant_list_add_restaurant_ll"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_alignParentBottom="true"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="0"
                android:background="@color/light_gray"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="0"
                android:background="@color/white"
                >
                <Button
                    android:id="@+id/add_restaurant_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/item_add"
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:layout_weight="0"
                        />
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        >
                        <TextView
                            android:id="@+id/add_restaurant_button_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="새 식당·카페 등록"
                            android:textSize="15sp"
                            android:textColor="@color/text_normal"
                            />
                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
