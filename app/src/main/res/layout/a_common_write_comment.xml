
<LinearLayout
    android:id="@+id/comment_and_report"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:background="@color/white"
    tools:context=".MainActivity"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/light_gray"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:padding="15dp"
                android:background="@color/white"
                >
                <CheckBox
                    android:id="@+id/check_is_report"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/check_is_report"
                    android:layout_centerVertical="true"
                    android:text="← 오류 제보일 시 체크하세요."
                    android:textSize="15sp"
                    android:textColor="@color/text_normal"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/very_light_gray"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:padding="15dp"
                android:background="@color/white"
                >
                <TextView
                    android:id="@+id/comment_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/text_normal"
                    android:text="내용"
                    />
                <EditText
                    android:id="@+id/comment_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@id/comment_label"
                    android:background="@drawable/rounded_bordered"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:textColor="@color/text_normal"
                    android:textSize="13sp"
                    android:gravity="top"
                    />
                <TextView
                    android:id="@+id/comment_text_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/wc_blue"
                    android:textSize="11sp"
                    android:layout_alignParentRight="true"
                    android:layout_above="@id/comment_edit_text"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/very_light_gray"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:padding="15dp"
                android:background="@color/white"
                >
                <TextView
                    android:id="@+id/url_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/text_normal"
                    android:text="사이트·블로그 URL"
                    />
                <LinearLayout
                    android:id="@+id/url_ll"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/url_label"
                    android:layout_marginTop="5dp"
                    >
                    <EditText
                        android:id="@+id/url_edit_text"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:background="@drawable/rounded_bordered"
                        android:textColor="@color/text_normal"
                        android:textSize="13sp"
                        />
                    <Button
                        android:id="@+id/url_test"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:text="시험"
                        android:textColor="@color/text_normal"
                        android:textSize="12sp"
                        android:background="@drawable/rounded_bordered"
                        android:layout_marginLeft="5dp"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/url_text_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/wc_blue"
                    android:textSize="11sp"
                    android:layout_alignParentRight="true"
                    android:layout_above="@id/url_ll"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/very_light_gray"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:padding="15dp"
                android:background="@color/white"
                >
                <Button
                    android:id="@+id/image_load_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이미지 넣기"
                    android:textColor="@color/text_normal"
                    android:textSize="12sp"
                    android:background="@drawable/rounded_bordered"
                    />
                <ImageView
                    android:id="@+id/image_to_be_uploaded"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/image_load_button"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="0"
                android:background="@color/light_gray"
                />
            <Button
                android:id="@+id/write_comment_summit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="0"
                android:text="확인"
                android:textColor="@color/text_normal"
                android:textSize="16sp"
                android:background="@drawable/rounded_bordered"
                android:layout_margin="15dp"
                />

        </LinearLayout>

    </ScrollView>
</LinearLayout>
