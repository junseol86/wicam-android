
<LinearLayout
    android:id="@+id/comment_and_report"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:background="@color/white"
    tools:context=".MainActivity"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/light_gray"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:padding="15dp"
                android:background="@color/white"
                >
                <TextView
                    android:id="@+id/school_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/wc_blue"
                    android:text="식당·카페가 보일 학교(들)"
                    />
                <LinearLayout
                    android:id="@+id/school_ll"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/school_label"
                    android:layout_marginTop="5dp"
                    >
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="5dp"
                        >
                        <TextView
                            android:id="@+id/school_to_see_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_normal"
                            android:textSize="15sp"
                            android:text="학교"
                            />
                    </RelativeLayout>
                    <Button
                        android:id="@+id/school_btn"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:text="추가/변경"
                        android:textColor="@color/text_normal"
                        android:textSize="12sp"
                        android:background="@drawable/rounded_bordered"
                        android:layout_marginLeft="5dp"
                        />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/very_light_gray"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:padding="15dp"
                android:background="@color/white"
                >
                <TextView
                    android:id="@+id/restaurant_name_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/wc_blue"
                    android:text="식당·카페 이름"
                    />
                <EditText
                    android:id="@+id/restaurant_name_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/restaurant_name_label"
                    android:background="@drawable/rounded_bordered"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:textColor="@color/text_normal"
                    android:textSize="13sp"
                    />
                <TextView
                    android:id="@+id/restaurant_name_text_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/wc_blue"
                    android:textSize="11sp"
                    android:layout_alignParentRight="true"
                    android:layout_above="@id/restaurant_name_edit_text"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/very_light_gray"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:padding="15dp"
                android:background="@color/white"
                >
                <TextView
                    android:id="@+id/genre_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/wc_blue"
                    android:text="종류"
                    />
                <Button
                    android:id="@+id/pick_genre_button"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/genre_label"
                    android:background="@drawable/rounded_bordered"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/text_normal"
                    android:textSize="14sp"
                    android:text = "선택하기 ▼"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/very_light_gray"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:padding="15dp"
                android:background="@color/white"
                >
                <TextView
                    android:id="@+id/address_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/wc_blue"
                    android:text="간략 위치 정보(ex: …동 …앞)"
                    />
                <EditText
                    android:id="@+id/address_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/address_label"
                    android:background="@drawable/rounded_bordered"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:textColor="@color/text_normal"
                    android:textSize="13sp"
                    />
                <TextView
                    android:id="@+id/address_text_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/wc_blue"
                    android:textSize="11sp"
                    android:layout_alignParentRight="true"
                    android:layout_above="@id/address_edit_text"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/very_light_gray"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:padding="15dp"
                android:background="@color/white"
                >
                <TextView
                    android:id="@+id/description_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/text_normal"
                    android:text="키워드 (주요 메뉴, 컨셉, 나라…)"
                    />
                <EditText
                    android:id="@+id/description_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/description_label"
                    android:background="@drawable/rounded_bordered"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:textColor="@color/text_normal"
                    android:textSize="13sp"
                    />
                <TextView
                    android:id="@+id/description_text_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/wc_blue"
                    android:textSize="11sp"
                    android:layout_alignParentRight="true"
                    android:layout_above="@id/description_edit_text"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/very_light_gray"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:padding="15dp"
                android:background="@color/white"
                >
                <TextView
                    android:id="@+id/phone1_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/text_normal"
                    android:text="전화번호1"
                    />
                <EditText
                    android:id="@+id/phone1_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/phone1_label"
                    android:background="@drawable/rounded_bordered"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:textColor="@color/text_normal"
                    android:textSize="13sp"
                    android:inputType="number"
                    />
                <TextView
                    android:id="@+id/phone1_text_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/wc_blue"
                    android:textSize="11sp"
                    android:layout_alignParentRight="true"
                    android:layout_above="@id/phone1_edit_text"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/very_light_gray"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:padding="15dp"
                android:background="@color/white"
                >
                <TextView
                    android:id="@+id/phone2_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/text_normal"
                    android:text="전화번호2"
                    />
                <EditText
                    android:id="@+id/phone2_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/phone2_label"
                    android:background="@drawable/rounded_bordered"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:textColor="@color/text_normal"
                    android:textSize="13sp"
                    android:inputType="number"
                    />
                <TextView
                    android:id="@+id/phone2_text_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/wc_blue"
                    android:textSize="11sp"
                    android:layout_alignParentRight="true"
                    android:layout_above="@id/phone2_edit_text"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/very_light_gray"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:padding="15dp"
                android:background="@color/white"
                >
                <TextView
                    android:id="@+id/map_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/text_normal"
                    android:text="지도상 위치"
                    />
                <LinearLayout
                    android:id="@+id/map_ll"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/map_label"
                    android:layout_marginTop="5dp"
                    >
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="5dp"
                        >
                        <TextView
                            android:id="@+id/map_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_normal"
                            android:textSize="15sp"
                            android:text="(없음)"
                            />
                    </RelativeLayout>
                    <Button
                        android:id="@+id/map_btn"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:text="지도에서 찾기"
                        android:textColor="@color/text_normal"
                        android:textSize="12sp"
                        android:background="@drawable/rounded_bordered"
                        android:layout_marginLeft="5dp"
                        />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="0"
                android:background="@color/light_gray"
                />
            <Button
                android:id="@+id/restaurant_add_submit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="0"
                android:text="확인"
                android:textColor="@color/text_normal"
                android:textSize="16sp"
                android:background="@drawable/rounded_bordered"
                android:layout_margin="15dp"
                />

        </LinearLayout>

    </ScrollView>
</LinearLayout>
