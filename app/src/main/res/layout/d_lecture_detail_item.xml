<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/lecture_detail_lecture_information"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@color/white"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/lecture_detail_major"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_normal"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                />
            <TextView
                android:id="@+id/lecture_detail_write_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:textColor="@color/text_very_light"
                android:textSize="10sp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/lecture_detail_lecture_name"
                    android:textColor="@color/text_normal"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    />
                <TextView
                    android:id="@+id/lecture_detail_professor_name"
                    android:textColor="@color/text_light"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_alignParentLeft="true"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:layout_marginBottom="15dp"
                    >
                    <TextView
                        android:id="@+id/lecture_detail_average_values"
                        android:textColor="@color/wc_blue"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    >
                    <Button
                        android:id="@+id/lecture_delete_btn"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_weight="0"
                        android:background="@color/transparent"
                        android:text="삭제"
                        android:textSize="12dp"
                        android:textColor="@color/wc_blue"
                        android:layout_alignParentRight="true"
                        />

                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>

    <!-- 위로는 정보, 아래로는 댓글 -->

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/assess_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        >
        <android.support.v7.widget.CardView
            android:id="@+id/assess_card_view"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            card_view:cardCornerRadius="4dp"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            card_view:cardElevation="0dp"
            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="10dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_weight="0"
                    >
                    <TextView
                        android:id="@+id/lecture_assess_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:textColor="@color/text_very_light"
                        android:textSize="10sp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="15dp"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        >
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            >
                            <RelativeLayout
                                android:layout_weight="0"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="어려움: "
                                    android:textSize="13sp"
                                    android:textColor="@color/text_light"
                                    android:layout_centerVertical="true"
                                    />
                            </RelativeLayout>
                            <ImageView
                                android:id="@+id/assess_difficulty_1"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/assess_star_empty"
                                />
                            <ImageView
                                android:id="@+id/assess_difficulty_2"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/assess_star_empty"
                                />
                            <ImageView
                                android:id="@+id/assess_difficulty_3"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/assess_star_empty"
                                />
                            <ImageView
                                android:id="@+id/assess_difficulty_4"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/assess_star_empty"
                                />
                            <ImageView
                                android:id="@+id/assess_difficulty_5"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/assess_star_empty"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            >
                            <RelativeLayout
                                android:layout_weight="0"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="유익함: "
                                    android:textSize="13sp"
                                    android:textColor="@color/text_light"
                                    android:layout_centerVertical="true"
                                    />
                            </RelativeLayout>
                            <ImageView
                                android:id="@+id/assess_instructiveness_1"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/assess_star_empty"
                                />
                            <ImageView
                                android:id="@+id/assess_instructiveness_2"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/assess_star_empty"
                                />
                            <ImageView
                                android:id="@+id/assess_instructiveness_3"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/assess_star_empty"
                                />
                            <ImageView
                                android:id="@+id/assess_instructiveness_4"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/assess_star_empty"
                                />
                            <ImageView
                                android:id="@+id/assess_instructiveness_5"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/assess_star_empty"
                                />
                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    >
                    <TextView
                        android:id="@+id/lecture_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:textColor="@color/text_normal"
                        android:textSize="13sp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        />
                </RelativeLayout>

            </LinearLayout>



        </android.support.v7.widget.CardView>

        <include layout="@layout/a_common_downloading_empty_last"/>

    </LinearLayout>

</LinearLayout>
